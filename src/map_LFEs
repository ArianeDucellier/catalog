#!/bin/csh -f

set output = map_LFEs.eps

# Small map
set x1 = -123.8
set x2 = -122.3
set y1 = 39.5
set y2 = 40.8
set Rop = $x1/$x2/$y1/$y2
set Jop = m-123/40/10

gmt pscoast -R$Rop -J$Jop -Ba1f0.5::WESN -W0.1p -G255/255/224 -S224/255/255 -Df -Na -Y12 -P -K >! $output

cat << END >> stations.dat
-122.715950  39.654710
-123.195030  39.892370
-123.219660  40.659900
-122.557720  40.143230
-123.305000  40.222000
-122.498000  40.104000
-123.155000  40.453000
-122.471000  40.327000
-123.653999  40.285000
-123.594299  40.188202
-123.361000  39.884998
-122.567600  39.911800
-122.541130  40.579880
END

gmt psxy stations.dat -R$Rop -J$Jop -St0.5 -Gblack -O -K >> $output

cat << END >> names.dat
-122.715950  39.554710    GASB
-123.195030  39.792370     KBN
-123.219660  40.559900    KHBB
-122.557720  40.043230     LRB
-123.305000  40.122000    ME08
-122.498000  40.004000    ME12
-123.155000  40.353000    ME27
-122.471000  40.227000    ME28
-123.653999  40.185000    ME37
-123.594299  40.088202    ME39
-123.361000  39.784998    ME41
-122.567600  39.811800    ME57
-122.541130  40.479880     WDC
END

gmt pstext names.dat -R$Rop -J$Jop -F+f12p,black -O -K >> $output

# Depth = 34.9
cat << END >> epicenter.dat
-122.87 40.09
END

gmt psxy epicenter.dat -R$Rop -J$Jop -Sa0.5 -Gred -O -K >> $output

# Depth = 26
cat << END >> corrected.dat
-122.89 40.22
END

gmt psxy corrected.dat -R$Rop -J$Jop -Sa0.5 -Ggreen -O >> $output

rm *.dat
